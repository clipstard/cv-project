        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        <script defer type="application/javascript">
            $(function() {
                $( document ).tooltip();
            });
        </script>
    {% endblock %}
</head>
<body>
<div class="offcanvas-menu-overlay"></div>
<div id="notification_area"></div>
<div id="loader-overlay"></div>


<script>
    window.loaderTpl = `
                <div class="sk-chase">
                  <div class="sk-chase-dot"></div>
                  <div class="sk-chase-dot"></div>
                  <div class="sk-chase-dot"></div>
                  <div class="sk-chase-dot"></div>
                  <div class="sk-chase-dot"></div>
                  <div class="sk-chase-dot"></div>
                </div>
            `;
    window.overlay = $('#loader-overlay');
    function showLoader(speed = 'fast') {
        overlay.html(loaderTpl);
        overlay.fadeIn(speed);
    }

    function hideLoader(speed = 'slow') {
        overlay.html(null);
        overlay.fadeOut(speed);
    }

    showLoader();

    window.loaded = false;
    window.onload = () => {
        hideLoader();
        window.loaded = true;
    };
    setTimeout(() => {
        if (!window.loaded) {
            hideLoader();
        }
    }, 10 * 1000); // 10 secs
</script>

</body>
</html>
